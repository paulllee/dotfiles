#!/usr/bin/env bash

# [l]anguage [s]erver [p]rotocol

function pipx_me() {
  pipx install "$@"
}

function npm_me() {
  npm install -g "$@"
}

# installed prior from Brewfile
# - lua
# - rust

# python
pipx_me ruff
pipx_me ruff-lsp
npm_me pyright

# bash
npm_me bash-language-server

# html/css/json
npm_me vscode-langservers-extracted

# js/ts/tsx
npm_me typescript typescript-language-server
